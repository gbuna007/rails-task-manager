<%= form_for(@task) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :details %><br>
  <%= f.text_area :details, size: "70x5" %>
  <br><br>

  <% if @task.completed.nil? == false %>
    <%= f.label :completed, 'Task completed?' %><br>
    <%= f.check_box :completed %>
    <br><br>
  <% end %>

  <%= f.submit %>
<% end %>
